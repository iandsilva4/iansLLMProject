<script>
  if (typeof window !== 'undefined') {
    window.addEventListener('DOMContentLoaded', () => {
      const sections = ['presentations', 'writing', 'coding', 'music'];
      const dots = document.querySelectorAll('.dot-nav .dot');
      
      // Smooth scroll function
      function smoothScrollTo(targetId) {
        const target = document.getElementById(targetId);
        if (target) {
          const offsetTop = target.offsetTop - 60; // Position section border at bottom of floating nav
          window.scrollTo({
            top: offsetTop,
            behavior: 'smooth'
          });
        }
      }
      
      // Add click handlers to dots for smooth scrolling
      dots.forEach((dot, i) => {
        dot.addEventListener('click', (e) => {
          e.preventDefault();
          smoothScrollTo(sections[i]);
        });
      });
      
      // Enhanced scroll detection with throttling
      let ticking = false;
      function onScroll() {
        if (!ticking) {
          requestAnimationFrame(() => {
            let current = 0;
            sections.forEach((id, i) => {
              const el = document.getElementById(id);
              if (el && window.scrollY + window.innerHeight / 2 >= el.offsetTop) {
                current = i;
              }
            });
            dots.forEach((dot, i) => {
              dot.classList.toggle('active', i === current);
            });
            ticking = false;
          });
          ticking = true;
        }
      }
      
      window.addEventListener('scroll', onScroll, { passive: true });
      onScroll();
      
      // Lazy loading for images
      const lazyImages = document.querySelectorAll('.lazy-image') as NodeListOf<HTMLElement>;
      const imageObserver = new IntersectionObserver((entries, observer) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const img = entry.target as HTMLElement;
            const src = img.getAttribute('data-src');
            if (src) {
              img.style.backgroundImage = `url(${src})`;
              img.classList.add('loaded');
              observer.unobserve(img);
            }
          }
        });
      }, {
        rootMargin: '50px 0px',
        threshold: 0.1
      });
      
      lazyImages.forEach(img => imageObserver.observe(img));
    });
  }
</script>
