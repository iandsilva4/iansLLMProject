// Helper to decode HTML entities
function decodeHTMLEntities(str) {
  if (!str) return '';
  return str.replace(/&amp;/g, '&')
            .replace(/&lt;/g, '<')
            .replace(/&gt;/g, '>')
            .replace(/&quot;/g, '"')
            .replace(/&#39;/g, "'")
            .replace(/&apos;/g, "'")
            .replace(/&nbsp;/g, ' ');
}

// Server-side fetch of Substack posts
let posts = [];
try {
  const response = await fetch('https://sandboxthoughts.substack.com/feed');
  if (response.ok) {
    const xmlText = await response.text();
    
    // Simple regex-based XML parsing
    const itemRegex = /<item>([\s\S]*?)<\/item>/g;
    const items = (xmlText.match(itemRegex) ?? []) as string[];
    
    items.forEach((item: string, index: number) => {
      if (index >= 4) return; // Only get first 4 posts
      
      // Extract title (handle CDATA)
      let title = '';
      const titleMatch = (item.match(/<title><!\[CDATA\[(.*?)\]\]><\/title>/) || item.match(/<title>(.*?)<\/title>/)) as RegExpMatchArray | null;
      if (titleMatch) title = decodeHTMLEntities(titleMatch[1].trim());
      
      // Extract link
      let link = '';
      const linkMatch = item.match(/<link>(.*?)<\/link>/) as RegExpMatchArray | null;
      if (linkMatch) link = linkMatch[1].trim();
      
      // Extract description (handle CDATA)
      let description = '';
      const descMatch = (item.match(/<description><!\[CDATA\[(.*?)\]\]><\/description>/) || item.match(/<description>(.*?)<\/description>/)) as RegExpMatchArray | null;
      if (descMatch) description = decodeHTMLEntities(descMatch[1].replace(/<[^>]*>/g, '').trim());
      
      // Extract pubDate
      let pubDate = '';
      const dateMatch = item.match(/<pubDate>(.*?)<\/pubDate>/) as RegExpMatchArray | null;
      if (dateMatch) pubDate = dateMatch[1];
      
      // Extract image from content:encoded
      let imageUrl = '';
      const contentMatch = (item.match(/<content:encoded><!\[CDATA\[([\s\S]*?)\]\]><\/content:encoded>/) || item.match(/<content:encoded>([\s\S]*?)<\/content:encoded>/)) as RegExpMatchArray | null;
      if (contentMatch) {
        const imgMatch = contentMatch[1].match(/<img[^>]+src=\"([^\"]+)\"/) as RegExpMatchArray | null;
        if (imgMatch) {
          imageUrl = imgMatch[1];
        }
      }
      
      // Clean up description
      const cleanDescription = description.substring(0, 150) + (description.length > 150 ? '...' : '');
      
      posts.push({
        title,
        link,
        description: cleanDescription,
        imageUrl,
        pubDate: pubDate ? new Date(pubDate).toLocaleDateString() : ''
      });
    });
  }
} catch (error) {
  console.error('Error fetching Substack posts:', error);
}
